{
  "manifest_version": 3,
  "name": "VRC Quick Open (Zendesk)",
  "version": "1.3.0",
  "description": "Floating bubble on Zendesk tickets to open VRC user info quickly.",
  "permissions": ["tabs", "storage", "alarms"],
  "host_permissions": [
    "https://a8c.zendesk.com/agent/tickets/*",
    "https://vrc.a8c.com/*",
    "https://api.github.com/*"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://a8c.zendesk.com/agent/tickets/*"],
      "js": ["src/contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "src/options.html",
  "action": {
    "default_title": "VRC Quick Open",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
